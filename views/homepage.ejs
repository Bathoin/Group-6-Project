<!-- Spotify API Script -->
<script>
    $(document).ready(function () {
        var searchTracks = function (query) {
            $.ajax({
                url: 'https://api.spotify.com/v1/search',
                data: {
                    q: query,
                    type: 'track',
                    limit: 5
                },
                success: function (response) {
                    var SPTSong = response.tracks.items[0];
                    console.log(SPTSong);
                    $('#playing').text(SPTSong);
                    $('#resultlist').show();
                    $('#SPTTitle').text(SPTSong.name);
                    $('#SPTArtist').text(SPTSong.artists[0].name);
                    $('#SPTDuration').text(millis_to_min_sec(SPTSong.duration_ms));
                    $('#SPTURL').attr("href", SPTSong.external_urls.spotify);
                }
            });
        };
        $("#searchButton").click(function () {
            searchTracks($('#searchField').val());
        })
    })
</script>
<!-- End of Spotify API Script -->

